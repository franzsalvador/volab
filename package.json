{
  "name": "volab",
  "author": "Franz Salvador",
  "version": "1.0.0",
  "description": "A full stack project using MERN to build social network bringing together music producers and vocalist to collab.",
  "engines": {
    "node": "10.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franzsalvador/volab.git"
  },
  "license": "ISC",
  "homepage": "https://github.com/franzsalvador/volab#readme",
  "bugs": {
    "url": "https://github.com/franzsalvador/volab/issues"
  },
  "main": "server/index.js",
  "scripts": {
    "start": "node .",
    "build": "browserify -g uglifyify -t babelify client/ -o server/public/main.js",
    "watch:server": "nodemon .",
    "watch:client": "watchify -vd -t babelify client/ -o server/public/main.js",
    "watch:public": "browser-sync start -c browser-sync.js",
    "watch": "npm-run-all --parallel watch:*"
  },
  "babel": {
    "plugins": [
      "transform-react-jsx",
      "transform-object-rest-spread",
      "transform-es2015-modules-commonjs"
    ]
  },
  "lint-staged": {
    "*.html": [
      "htmlhint"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server/"
    ],
    "ignore": [
      "server/public/"
    ]
  },
  "dependencies": {
    "bcrypt": "3.0.0",
    "body-parser": "1.18.3",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "html-react-parser": "^0.4.6",
    "mongodb": "3.1.1",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "reactstrap": "6.3.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babelify": "8.0.0",
    "browser-sync": "2.24.5",
    "browserify": "16.2.2",
    "eslint": "4.19.1",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "3.1.0",
    "htmlhint": "0.9.13",
    "husky": "1.0.0-rc.2",
    "lint-staged": "7.1.0",
    "nodemon": "1.18.3",
    "npm-run-all": "4.1.3",
    "stylelint": "9.2.0",
    "stylelint-config-standard": "18.2.0",
    "uglifyify": "5.0.1",
    "watchify": "3.11.0"
  }
}
